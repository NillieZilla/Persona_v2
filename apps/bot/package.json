{
  "name": "@apps/bot",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "commands:list:guild": "tsx src/commands.ts list:guild",
    "commands:list:global": "tsx src/commands.ts list:global",
    "commands:clear:guild": "tsx src/commands.ts clear:guild",
    "commands:clear:global": "tsx src/commands.ts clear:global",
    "commands:deploy:guild": "tsx src/commands.ts deploy:guild",
    "commands:reset:guild": "tsx src/commands.ts reset:guild",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist || true"
  },
  "devDependencies": {
    "rimraf": "^5.0.7"
  },
  "dependencies": {
    "@pkg/core": "workspace:^",
    "bullmq": "^5.58.2",
    "discord.js": "^14.15.3",
    "dotenv": "^16.6.1",
    "ioredis": "^5.7.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.4"
  }
}
